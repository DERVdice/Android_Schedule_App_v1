<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/ic_mainlistrow_v2_background_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_additional_info"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="40px"
            android:layout_height="50px"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/ic_mainlistrow_v2_file_btn"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_marker"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="44px"
            android:layout_height="54px"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/ic_mainlistrow_v2_unchecked_mark_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="97dp"
            android:layout_height="25dp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:maxLength="13"
            android:text="00:00 - 00:00"
            android:textAlignment="center"
            android:textColor="@color/colorLiteGray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_item_mode"
            android:layout_width="98dp"
            android:layout_height="25dp"
            android:layout_marginTop="1dp"
            android:maxLength="9"
            android:text="Семинар"
            android:textAlignment="center"
            android:textColor="@color/colorLiteGray"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView_time"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_item_auditorium"
            android:layout_width="98dp"
            android:layout_height="25dp"
            android:layout_marginTop="1dp"
            android:maxLength="9"
            android:text="ауд. 0000"
            android:textAlignment="center"
            android:textColor="@color/colorLiteGray"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView_item_mode"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_item_building"
            android:layout_width="97dp"
            android:layout_height="25dp"
            android:layout_marginTop="1dp"
            android:maxLength="10"
            android:text="к. 0000000"
            android:textAlignment="center"
            android:textColor="@color/colorLiteGray"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView_item_auditorium"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_item_name"
            android:layout_width="361dp"
            android:layout_height="52dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:maxLength="117"
            android:text="Название предмета"
            android:textColor="@color/colorLiteGray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_time" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>